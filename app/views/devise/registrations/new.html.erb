<div style="padding-left: 25%">
  <h2> Cadastre-se </h2>

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name),
    :html => {:class => "form-horizontal"}) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <div class="col-sm-5">
        <%= f.text_field :nome, :class => "form-control", :placeholder => "Nome" %>
      </div>
    </div>
  
    <div class="form-group">
      <div class="col-sm-5">
        <%= f.email_field :email, :class => "form-control", :placeholder => "Email"  %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-5">
        <%= f.password_field :password, :class => "form-control", :placeholder => "Senha"  %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-5">
        <%= f.password_field :password_confirmation, :class => "form-control", :placeholder => "Confirme a senha"  %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-5">
        <%= f.submit "Cadastrar", :class => "btn btn-large btn-primary", :style => "float: right" %>
      </div>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>