<div style="left: 35%;top: 35%;position: absolute;width: 600px;height: 300px;margin: 0 auto;">
  <img src="/images/logo.jpg" style="max-width: 150px;margin-left: 310px"/><br />
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :style => 'margin: 0' }) do |f| %>
<br />
  <div class="control-group info"><br />
  <%= f.email_field :email, :autofocus => true, :style=>"width: 450px", :placeholder => "Login" %></div>

<div class="control-group info" >
  <%= f.password_field :password, :style=>"width: 450px", :placeholder => "Senha" %></div>
    <br />
    <button class="btn btn-large btn-primary" type="submit" value="Sign in" style="width: 463px;background: #2092bc;">Entrar</button>
    <br />
      <% if devise_mapping.rememberable? -%>
    <br />
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>
    
<% end %>

<%= render "devise/shared/links" %>
</div>