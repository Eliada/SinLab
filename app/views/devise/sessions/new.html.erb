<div class="container">
  <div class="row">
    <div class="col-md-offset-3 col-md-6">
      <div style="padding: 10%"></div>

      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "form-horizontal"}) do |f| %>
        <div class="form-group">
          <div class="col-sm-10">
            <img src="/images/logo.jpg" style="max-width: 150px;float:right;"/>
          </div>  
        </div>  
        <div class="form-group">
          <div class="col-sm-10">
            <%= f.email_field :email, :autofocus => true, :class => "form-control", :placeholder => "Login" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-10">
            <%= f.password_field :password, :class => "form-control", :placeholder => "Senha" %></div>
        </div>
        <div class="form-group">
          <div class="col-sm-10">
            <button class="btn btn-large btn-primary" type="submit" value="Sign in" style="width: 50%;">Entrar</button>
            <%= link_to "Cadastre-se", new_usuario_registration_path, :class => "btn btn-large btn-success btn-cadastro" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-5">
            <% if devise_mapping.rememberable? -%>
              <div>
                <%= f.check_box :remember_me %> 
                <%= f.label :remember_me, "Manter conectado" %>
              </div>
            <% end %>
            <%= render "devise/shared/links" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
