<div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
     aria-hidden="true" style="width: 50%; margin-left: -25%; height: 600px">

  <div class="modal-body" style="max-height: 95%">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field span6">
        <%= f.label :nome %>
        <%= f.text_field :nome, :style => "width: 100%"%>
      </div>

      <div class="field span6"><%= f.label :email %>
        <%= f.email_field :email, :autofocus => true, :style => "width: 100%" %>
      </div>

      <div class="container-fluid">

        <div class="row-fluid">
          <div class="span7">
            <div class="field">
              <%= f.label :horario_mensal %>
              <%= f.number_field :horario_mensal %>
            </div>
            <div class="field">
              <%= f.label :valor_da_hora %>
              <%= f.number_field :valor_da_hora %>
            </div>

            <div class="field">
              <%= f.label :entrada_usp %>
              <%= f.date_select :entrada_usp, {}, :style => "width: 100px" %>
            </div>

            <div class="field">
              <%= f.label "saida prevista usp"%>
              <%= f.date_select :saida_usp, {}, :style => "width: 100px" %>
            </div>

            <div><%= f.label :password %>
              <%= f.password_field :password %>
            </div>
          </div>
          <div class="span5">

            <div class="field">
              <%= f.label :cpf %>
              <%= f.text_field :cpf %>
            </div>

            <div class="field">
              <%= f.label :banco %>
              <%= f.text_field :banco %>
            </div>

            <div class="field">
              <%= f.label :conta %>
              <%= f.number_field :conta %>
            </div>

            <div class="field">
              <%= f.label :agencia %>
              <%= f.number_field :agencia %>
            </div>

            <div><%= f.label :password_confirmation %>
              <%= f.password_field :password_confirmation %>
            </div>
          </div>
        </div>
      </div>

      <br/>
      <div class="actions">
        <button class="btn default-button" data-dismiss="modal" aria-hidden="true" style="float: left">Cancelar</button>
        <%= f.submit "Salvar", :style => "float: right", :class => "btn default-button"%>
      </div>
    <% end %>

  </div>
</div>

