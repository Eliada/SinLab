<div class="row-fluid" style="margin-left: 15px">
  <div class="span2 blue-text">
    &lt; <%= @year %> &gt;
  </div>

  <div class="span3 blue-text">
    &lt; <%= t("date.month_names")[@month.numero] %> &gt;
  </div>
</div>
<div class="blue-line">  </div>

<table class="list-table">
  <% @dias.each do |dia| %>
    <tr>
      <td style="border:none"><%= dia.numero %></td>
      <td style="border:none"><%= dia.entrada.strftime("%H:%M") %></td>
      <td style="border:none"><%= dia.saida.strftime("%H:%M") %></td>
      <td style="border:none"><%= dia.formata_intervalo %></td>
      <td style="width: 70%; border: none">
      <div class="blue-background" style="width: <%= (banco_de_hora.bar_width)%>">
        <%= dia.formata_horas %>h
      </div>
      </td>
    </tr>
  <% end %>
</table>

<br />

<%= link_to "Adicionar", "#new-banco-modal", :class => "btn default-button",
  :style => "margin: 15px;", "data-toggle" => "modal", :role => "button" %>

<%= render :partial => "modal" %>
