<div class="blue-text" style="margin-left: 30px">
  Estatísticas de cartões do Trello
</div>

<%= form_tag cartoes_path, {:method => :get} do %>
  <div class="container" style="width:80%">
    <div class="row">
      <div class="col-md-3">
        <%= select_tag(:ano, options_for_select(@anos, @ano), {:class => 'menu_select'}) %>
      </div>

      <div class="col-md-3">
        <%= select_tag(:mes, options_for_select(@meses, @mes), {:class => 'menu_select'}) %>
      </div>

      <div class="col-md-3">
        <%= select_tag(:dia, options_for_select(@dias, @dia), {:class => 'menu_select'}) %>
      </div>

      <div class="col-md-3">
        <%= select_tag(:cartao_pai, options_for_select(@cartoes_pais, @cartao_pai), {:class => 'menu_select'}) %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-3">
        <%= select_tag(:usuario_id, options_for_select(@usuarios, @usuario), {:class => 'menu_select'}) %>
      </div>

      <div class="col-md-3">
        <%= select_tag(:projeto_id, options_for_select(@projetos, @projeto), {:class => 'menu_select'}) %>
      </div>

      <div class="col-md-3">
        <%= select_tag(:tag_id, options_for_select(@tags, @tag), {:class => 'menu_select'}) %>
      </div>

      <div class="col-md-3">
        <%= submit_tag('Filtra', {:class => 'btn default-button'}) %>
      </div>
    </div>
  </div>
<% end %>

<div class="blue-line">  </div>

<div class="container">
  <div class="row">
    <div class="col-md-3" style="padding: 15px;">
      <%= form_tag atualizar_trello_cartoes_path  do %>
        <%= hidden_field_tag :key  %>
        <%= hidden_field_tag :token  %>
        <%= submit_tag 'Sincronizar horas do Trello', data: {confirm: "Esta operação pode demorar pois depende do Trello. Continuar?"}, class: 'btn default-button' %>
        <% end %>
      </div>
    </div>
  </div>

  <table  class="list-table">
    <tr>
      <th> Cartão </th>
      <th> Horas Totais </th>
      <th> Número de atividades </th>
      <th> Detalhes </th>
    </tr>
    <% @cartoes.each do |cartao| %>
      <tr>
        <td> <%= hidden_field_tag cartao.trello_id, "", :class => "card-placeholder card-default" %> </td>
        <td> <%= int_to_horas(cartao.horas_trabalhadas) %> </td>
        <td> <%= cartao.atividades.count %> </td>
        <td> <%= link_to '<i class="icon-list"></i>'.html_safe, cartao_path(cartao), :class => "nohover" %> </td>
      </tr>
    <% end %>
  </table>
