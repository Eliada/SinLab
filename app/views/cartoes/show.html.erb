<div class="blue-text" style="margin-left: 30px">
  Atividades de cartão do Trello
</div>

<div class="blue-line">  </div>

<div class="grey-form" style="padding: 15px">
  <h4> Cartão </h4>
  <%= hidden_field_tag @cartao.trello_id, "", :class => "card-placeholder card-default" %>
</div>


<table class="list-table">
  <tr>
    <th> Data       </th>
    <th> Usuário    </th>
    <th> Projeto    </th>
    <th> Observações</th>
    <th> Horas      </th>
    <th> Aprovado?  </th>
  </tr>

  <% @atividades.each do |atividade| %>
    <tr>
      <td><%= atividade.data.strftime("%d/%m/%Y")  %></td>
      <td><%= atividade.usuario.nome               %></td>
      <td><%= atividade.projeto.nome               %></td>
      <td><%= atividade.observacao                 %></td>
      <td><%= int_to_horas atividade.duracao       %></td>
      <td><%= atividade.aprovacao? ? "Sim" : "Não" %></td>
    </tr>
  <% end %>
</table>
