<div class="blue-text">
  <%= link_to '<i class="icon-double-angle-left"></i>'.html_safe, periodos_dias_path(:year => @ano.to_i - 1) %>
  <%= @ano %>
  <%= link_to '<i class="icon-double-angle-right"></i>'.html_safe, periodos_dias_path(:year => @ano.to_i + 1) %>
</div>

<% if can? :see, :banco_de_horas %>
  <%= select_tag(:menu_select, options_for_select(@usuarios, @usuario.id), :prompt => "Escolha um usuario") %>
<%end%>

<div class="blue-line">  </div>

<table style="width: 100%">
  <tr>
    <% @periodos.each_with_index do |p, i| %>
      <td class="month-table">
        <%= link_to periodo_link(p[:inicio], p[:fim], @usuario.id).html_safe,
            dias_path(inicio: p[:inicio].to_formatted_s, fim: p[:fim].to_formatted_s, usuario: @usuario.id),
          :class => "month-link blue-link" %>
      </td>
      <% if (i + 1) % 6 == 0 %>
      </tr>
      <tr>
      <% end %>
    <% end %>
  </tr>
</table>

<script>
var url = <%= periodos_dias_path %> ;
$('#menu_select').bind('change', function() { location.href = url + $(this).val() });
$(".month-table").height($(".month-table").width() + 20);
</script>
