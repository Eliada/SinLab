<div class="form-horizontal">
  <h3> Dados do Projeto </h3>
  <div class="form-group">
    <%= f.label :nome, :class => "col-sm-2" %>
    <%= f.text_field :nome, :class => "col-sm-9"%>
  </div>

  <div class="form-group">
    <%= f.label :descricao, :class => "col-sm-2" %>
    <%= f.text_area :descricao, :style => "height: 80px", :class => "col-sm-9"%>
  </div>

  <div class="form-group">
    <%= f.label :data_de_inicio, :class => "col-sm-2" %>
    <%= f.date_select :data_de_inicio, {}, :style => "width: 100px", :class => "col-sm-5" %>
  </div>
  
  <div class="form-group">
    <%= f.label :ativo, :class => "col-sm-2" %>
    <%= f.radio_button :ativo, true, :style => "width: 100px"   %>
    <%= f.label 'Ativo' %>
    <%= f.radio_button :ativo, false, :style => "width: 100px" %>
    <%= f.label 'Inativo' %>  
  </div>
</div>

<%= render partial: 'nav_bar', locals: {f: f} %>
