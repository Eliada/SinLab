<div class="blue-text" style="margin-left: 30px">
  Campos Do Projeto
</div>
<div class="blue-line">  </div>
<%= nested_form_for(@projeto, :validate => true, :html => {"data-type" => :json}) do |f| %>
  <div class="form-horizontal" style="margin-left:15px; margin-top:15px">
    <%= f.fields_for :campos, :allow_destroy => true do |campo| %>
      <div class="form-group">
        <%= campo.label :categoria, :class => "col-sm-2"  %>
        <%= campo.text_field :categoria, :class => "col-sm-9" %>
      </div>
      <div class="form-group">
        <%= campo.label :nome, :class => "col-sm-2"  %>
        <%= campo.text_field :nome, :class => "col-sm-9"  %>
      </div>
      <div class="form-group">
        <div class="col-sm-2">
          <%= campo.label :formato, "MÃ¡scara"%>
          <i title="a para letras, 9 para numeros e * para qualquer coisa" class="icon-question-sign nohover" data-toggle="tooltip" href="#"></i>
        </div>
        <%= campo.text_field :formato, :class => "formato col-sm-9" %>
      </div>
      <div class="form-group">
        <%= campo.link_to_remove '<i class="icon-trash icon-2x"> </i>'.html_safe, :class => 'nohover col-sm-2'%>
      </div>
      <div class="grey-line"> </div>
    <% end %>
    <%= f.link_to_add 'Adicionar Campo', :campos, :class => "btn default-button", :style => "margin-bottom: 20px;"%>
  </div>
  <%= render partial: 'nav_bar', locals: {f: f} %>
<% end %>
