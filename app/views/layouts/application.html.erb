<!DOCTYPE html>
<html>
<head>
  <title>SinLab</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="user_nav">
    <% if usuario_signed_in? %>
	  <%=t 'messages.logged_in', :email => current_usuario.email %>
	  <%= link_to "sair", destroy_usuario_session_path, :method => :delete %>
    <% else %>
	  <%= link_to "cadastrar", new_usuario_registration_path %> ou <%= link_to "entrar", new_usuario_session_path %>
    <% end %>
  </div>
	<div class="messages">
		<% flash.each do |name, msg| %>
		  <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
		<% end %>
	<div/>
  <%= yield %>

<%= link_to "Home", root_url %>

</body>
</html>
