<div class="modal" id="mensagens_<%= atividade.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Mensagens</h4>
      </div>
      <div class="modal-body">
        <%= text_area_tag :mensagem, atividade.mensagem, :style => "width: 100%" %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
        <%= submit_tag "Enviar", :class => "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
