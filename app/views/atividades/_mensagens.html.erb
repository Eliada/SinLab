<div class="modal-dialog">
  <div class="modal-content">
    <%= form_tag enviar_mensagem_atividades_path, :remote => true do %>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Mensagens</h4>
      </div>
      <div class="modal-body">
        <%= render "mensagem", mensagens: @atividade.mensagens %>
        <%= hidden_field_tag :atividade_id, @atividade.id %>
        <%= text_area_tag :mensagem, "", :style => "width: 100%" %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
        <%= submit_tag "Enviar", :class => "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
