<div class="blue-line">  </div>

<table class="list-table">
  <tr>
    <th>Editar</th>
    <th>Data</th>
    <th>Projeto</th>
    <th>Horas</th>
    <th>aprovado</th>
    <th>Observação</th>
    <th>Avaliador</th>
    <th>Mensagem</th>
    <th>Excluir</th>
  </tr>
  <% @atividades.each do |atividade| %>
    <tr <%= "class=red-background" if atividade.aprovacao == false %>>
      <td style="border:none", onclick="showstuff('<%= atividade.id%>');" >
        <%= link_to "OK", "#new-banco-modal", "data-toggle" => "modal", :role => "button" %>
      </td>
      <td style="border:none"><%= atividade.data%></td>
      <td style="border:none"><%= atividade.projeto.nome %></td>
      <td style="width: 15%; border: none", onclick="showstuff('<%= atividade.id%>');">
        	<div class="blue-background" style="width: <%= (atividade.bar_width)%>">
            <%=(atividade.formata_duracao) %> h
        	</div>
      </td>
      <td width="20%" style="border:none">
        <% if atividade.aprovacao.nil? %>
          <%= "Não vista, ainda..." %>
        <% elsif atividade.aprovacao %>
          <%= "Sim!" %>
        <% else %>
          <%= atividade.mensagem%>
        <% end %>
      </td>
      <td width="40%" style="border:none"><%= atividade.observacao %></td>
      <td style="border:none"><%= atividade.avaliador_id.nil? ? "" : Usuario.find(atividade.avaliador_id).nome %></td>
      <td style="border:none"><%= atividade.mensagem.nil? ? "" : atividade.mensagem %></td>
      <td style="border:none">
      	<%= link_to atividade, :method => :delete, :confirm => "Deseja excluir o registro?" do%>
      		X
      	<% end %>
      </td>
    </tr>
  <% end %>
</table>
<br />
<%= link_to "Adicionar", "#new-banco-modal", :class => "btn default-button",
  :style => "margin: 15px;", "data-toggle" => "modal", :role => "button" , :onclick =>  "showstuff('0');"%>
<%= render :partial => "modal" %>
<%= link_to 'Back', banco_de_horas_path(:month => @month, :user => @user_id, :year => @year), :class => "default-button btn"%>

<script>
function showstuff(boxid)
{
  document.getElementById(boxid).style.display="block";
}
</script>
